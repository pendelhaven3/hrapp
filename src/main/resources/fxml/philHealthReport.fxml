<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import com.pj.hrapp.gui.component.AppDatePicker?>
<?import javafx.geometry.Insets?>
<?import com.pj.hrapp.gui.component.AppPropertyValueFactory?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import com.pj.hrapp.gui.component.AppTableView?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns:fx="http://javafx.com/fxml" 
		fx:controller="com.pj.hrapp.controller.PhilHealthReportController">
	<top>
		<ToolBar>
			<Button text="Back" onAction="#doOnBack" />
		</ToolBar>
	</top>
	<center>
		<VBox alignment="center" spacing="10">
			<padding><Insets top="10" bottom="10" /></padding>
			<GridPane vgap="10" alignment="center">
				<Label text="Month" prefWidth="100"
					GridPane.columnIndex="0" GridPane.rowIndex="0" />
				<ComboBox fx:id="monthComboBox"
					GridPane.columnIndex="1" GridPane.rowIndex="0" />
				<Label text="Year"
					GridPane.columnIndex="0" GridPane.rowIndex="1" />
				<ComboBox fx:id="yearComboBox"
					GridPane.columnIndex="1" GridPane.rowIndex="1" />
			</GridPane>
		
			<HBox alignment="center" spacing="10">
				<Button text="Generate Report" onAction="#generateReport" />
				<Button text="Generate Excel" onAction="#generateExcelReport" />
			</HBox>
		
			<TabPane fx:id="tabPane" VBox.vgrow="always">
				<tabs>
					<Tab text="Non-Household" closable="false">
						<VBox spacing="10">
							<AppTableView fx:id="nonHouseholdTable" VBox.vgrow="always">
								<columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
								<columns>
									<TableColumn text="Employee">
										<cellValueFactory>
											<AppPropertyValueFactory property="employeeName" />
										</cellValueFactory>
									</TableColumn>
									<TableColumn text="PhilHealth No.">
										<cellValueFactory>
											<AppPropertyValueFactory property="philHealthNumber" />
										</cellValueFactory>
									</TableColumn>
									<TableColumn text="Monthly Pay" styleClass="right">
										<cellValueFactory>
											<AppPropertyValueFactory property="monthlyPay" />
										</cellValueFactory>
									</TableColumn>
									<TableColumn text="Due" styleClass="right">
										<cellValueFactory>
											<AppPropertyValueFactory property="due" />
										</cellValueFactory>
									</TableColumn>
								</columns>
							</AppTableView>
							
							<GridPane vgap="10" alignment="center">
								<Label text="Total Monthly Pay:" prefWidth="175"
									GridPane.columnIndex="0" GridPane.rowIndex="0" />
								<Label fx:id="totalNonHouseholdMonthlyPayField" prefWidth="100" alignment="center_right"
									GridPane.columnIndex="1" GridPane.rowIndex="0" />
								<Region prefWidth="50"
									GridPane.columnIndex="2" GridPane.rowIndex="0" />
								<Label text="Total Due:" prefWidth="175"
									GridPane.columnIndex="3" GridPane.rowIndex="0" />
								<Label fx:id="totalNonHouseholdDueField" prefWidth="100" alignment="center_right"
									GridPane.columnIndex="4" GridPane.rowIndex="0" />
							</GridPane>
						</VBox>
					</Tab>
					<Tab text="Household" closable="false">
						<VBox spacing="10">
							<AppTableView fx:id="householdTable" VBox.vgrow="always">
								<columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
								<columns>
									<TableColumn text="Employee">
										<cellValueFactory>
											<AppPropertyValueFactory property="employeeName" />
										</cellValueFactory>
									</TableColumn>
									<TableColumn text="PhilHealth No.">
										<cellValueFactory>
											<AppPropertyValueFactory property="philHealthNumber" />
										</cellValueFactory>
									</TableColumn>
									<TableColumn text="Monthly Pay" styleClass="right">
										<cellValueFactory>
											<AppPropertyValueFactory property="monthlyPay" />
										</cellValueFactory>
									</TableColumn>
									<TableColumn text="Due" styleClass="right">
										<cellValueFactory>
											<AppPropertyValueFactory property="due" />
										</cellValueFactory>
									</TableColumn>
								</columns>
							</AppTableView>
							
							<GridPane vgap="10" alignment="center">
								<Label text="Total Monthly Pay:" prefWidth="175"
									GridPane.columnIndex="0" GridPane.rowIndex="0" />
								<Label fx:id="totalHouseholdMonthlyPayField" prefWidth="100" alignment="center_right"
									GridPane.columnIndex="1" GridPane.rowIndex="0" />
								<Region prefWidth="50"
									GridPane.columnIndex="2" GridPane.rowIndex="0" />
								<Label text="Total Due:" prefWidth="175"
									GridPane.columnIndex="3" GridPane.rowIndex="0" />
								<Label fx:id="totalHouseholdDueField" prefWidth="100" alignment="center_right"
									GridPane.columnIndex="4" GridPane.rowIndex="0" />
							</GridPane>
						</VBox>
					</Tab>
					<Tab text="Summary" closable="false">
						<VBox spacing="10">
							<HBox alignment="center">
								<padding><Insets top="30" /></padding>
								<Label text="NON-HOUSEHOLD" /> 
							</HBox>
							<GridPane vgap="10" alignment="center">
								<Label text="Total Monthly Pay:" prefWidth="175"
									GridPane.columnIndex="0" GridPane.rowIndex="0" />
								<Label fx:id="totalNonHouseholdMonthlyPayField2" prefWidth="100" alignment="center_right"
									GridPane.columnIndex="1" GridPane.rowIndex="0" />
								<Region prefWidth="50"
									GridPane.columnIndex="2" GridPane.rowIndex="0" />
								<Label text="Total Due:" prefWidth="175"
									GridPane.columnIndex="3" GridPane.rowIndex="0" />
								<Label fx:id="totalNonHouseholdDueField2" prefWidth="100" alignment="center_right"
									GridPane.columnIndex="4" GridPane.rowIndex="0" />
							</GridPane>
							
							<HBox alignment="center">
								<padding><Insets top="20" /></padding>
								<Label text="HOUSEHOLD" /> 
							</HBox>
							<GridPane vgap="10" alignment="center">
								<Label text="Total Monthly Pay:" prefWidth="175"
									GridPane.columnIndex="0" GridPane.rowIndex="0" />
								<Label fx:id="totalHouseholdMonthlyPayField2" prefWidth="100" alignment="center_right"
									GridPane.columnIndex="1" GridPane.rowIndex="0" />
								<Region prefWidth="50"
									GridPane.columnIndex="2" GridPane.rowIndex="0" />
								<Label text="Total Due:" prefWidth="175"
									GridPane.columnIndex="3" GridPane.rowIndex="0" />
								<Label fx:id="totalHouseholdDueField2" prefWidth="100" alignment="center_right"
									GridPane.columnIndex="4" GridPane.rowIndex="0" />
							</GridPane>
							
							<HBox alignment="center">
								<padding><Insets top="20" /></padding>
								<Label text="TOTAL" /> 
							</HBox>
							<GridPane vgap="10" alignment="center">
								<Label text="Total Monthly Pay:" prefWidth="175"
									GridPane.columnIndex="0" GridPane.rowIndex="0" />
								<Label fx:id="totalMonthlyPayField" prefWidth="100" alignment="center_right"
									GridPane.columnIndex="1" GridPane.rowIndex="0" />
								<Region prefWidth="50"
									GridPane.columnIndex="2" GridPane.rowIndex="0" />
								<Label text="Total Due:" prefWidth="175"
									GridPane.columnIndex="3" GridPane.rowIndex="0" />
								<Label fx:id="totalDueField" prefWidth="100" alignment="center_right"
									GridPane.columnIndex="4" GridPane.rowIndex="0" />
							</GridPane>
						</VBox>
					</Tab>
				</tabs>
			</TabPane>
		
		</VBox>
	</center>
</BorderPane>
