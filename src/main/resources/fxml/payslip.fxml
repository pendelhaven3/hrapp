<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import com.pj.hrapp.gui.component.AppPropertyValueFactory?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns:fx="http://javafx.com/fxml" 
		fx:controller="com.pj.hrapp.controller.PayslipController" >
	<top>
		<ToolBar>
			<Button text="Back" onAction="#doOnBack" />
		</ToolBar>
	</top>
	<center>
		<VBox spacing="10" alignment="center">
			<padding><Insets top="10" bottom="10" /></padding>
			<GridPane vgap="10" alignment="center">
				<Label text="Batch Number" prefWidth="200"
					GridPane.columnIndex="0" GridPane.rowIndex="0" />
				<Label fx:id="payrollBatchNumberLabel"
					GridPane.columnIndex="1" GridPane.rowIndex="0" />
				<Region prefWidth="100"
					GridPane.columnIndex="2" GridPane.rowIndex="0" />
				<Label text="Basic Pay" prefWidth="150"
					GridPane.columnIndex="3" GridPane.rowIndex="0" />
				<Label fx:id="basicPayLabel"
					GridPane.columnIndex="4" GridPane.rowIndex="0" />
					
				<Label text="Employee"
					GridPane.columnIndex="0" GridPane.rowIndex="1" />
				<Label fx:id="employeeLabel"
					GridPane.columnIndex="1" GridPane.rowIndex="1" />
				<Label text="Adjustments"
					GridPane.columnIndex="3" GridPane.rowIndex="1" />
				<Label fx:id="adjustmentsLabel"
					GridPane.columnIndex="4" GridPane.rowIndex="1" />
					
				<Label text="Period Covered From"
					GridPane.columnIndex="0" GridPane.rowIndex="2" />
				<Label fx:id="periodCoveredFromLabel"
					GridPane.columnIndex="1" GridPane.rowIndex="2" />
				<Label text="Net Pay"
					GridPane.columnIndex="3" GridPane.rowIndex="2" />
				<Label fx:id="netPayLabel"
					GridPane.columnIndex="4" GridPane.rowIndex="2" />
					
				<Label text="Period Covered To"
					GridPane.columnIndex="0" GridPane.rowIndex="3" />
				<Label fx:id="periodCoveredToLabel"
					GridPane.columnIndex="1" GridPane.rowIndex="3" />
			</GridPane>
			
			<Button text="Edit" onAction="#editPayslip" />
			
			<TabPane fx:id="tabPane" VBox.vgrow="always">
				<tabs>
					<Tab text="Attendance" closable="false">
						<VBox spacing="10" alignment="center">
							<TableView fx:id="attendancesTable">
								<columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
								<columns>
									<TableColumn text="Date">
										<cellValueFactory>
											<AppPropertyValueFactory property="date" />
										</cellValueFactory>
									</TableColumn>
									<TableColumn text="Attendance">
										<cellValueFactory>
											<AppPropertyValueFactory property="attendance" />
										</cellValueFactory>
									</TableColumn>
								</columns>
							</TableView>
							
							<HBox alignment="center" spacing="10">
								<Button text="Delete Attendance" onAction="#deleteEmployeeAttendance" />
							</HBox>
						</VBox>
					</Tab>
					<Tab text="Basic Pay" closable="false">
						<TableView fx:id="basicPayItemsTable">
							<columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
							<columns>
								<TableColumn text="Rate">
									<cellValueFactory>
										<AppPropertyValueFactory property="rate" />
									</cellValueFactory>
								</TableColumn>
								<TableColumn text="Period">
									<cellValueFactory>
										<AppPropertyValueFactory property="periodAsString" />
									</cellValueFactory>
								</TableColumn>
								<TableColumn text="No. of Days">
									<cellValueFactory>
										<AppPropertyValueFactory property="numberOfDays" />
									</cellValueFactory>
								</TableColumn>
								<TableColumn text="Amount" styleClass="right">
									<cellValueFactory>
										<AppPropertyValueFactory property="amount" />
									</cellValueFactory>
								</TableColumn>
							</columns>
						</TableView>
					</Tab>
					<Tab text="Vale Products" closable="false">
						<VBox alignment="center" spacing="10">
							<TableView fx:id="valeProductsTable">
								<columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
								<columns>
									<TableColumn text="SI No.">
										<cellValueFactory>
											<AppPropertyValueFactory property="salesInvoiceNumber" />
										</cellValueFactory>
									</TableColumn>
									<TableColumn text="Transaction Date">
										<cellValueFactory>
											<AppPropertyValueFactory property="transactionDate" />
										</cellValueFactory>
									</TableColumn>
									<TableColumn text="Amount" styleClass="right">
										<cellValueFactory>
											<AppPropertyValueFactory property="amount" />
										</cellValueFactory>
									</TableColumn>
								</columns>
							</TableView>
							
							<HBox alignment="center" spacing="10">
								<Button text="Add Vale Product" onAction="#addValeProduct" />
								<Button text="Delete Vale Product" onAction="#deleteValeProduct" />
							</HBox>
						</VBox>
					</Tab>
					<Tab text="Others" closable="false">
						<VBox spacing="10" alignment="center">
							<TableView fx:id="adjustmentsTable">
								<columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
								<columns>
									<TableColumn text="Type">
										<cellValueFactory>
											<AppPropertyValueFactory property="type" />
										</cellValueFactory>
									</TableColumn>
									<TableColumn text="Description">
										<cellValueFactory>
											<AppPropertyValueFactory property="description" />
										</cellValueFactory>
									</TableColumn>
									<TableColumn text="Amount" styleClass="right">
										<cellValueFactory>
											<AppPropertyValueFactory property="amount" />
										</cellValueFactory>
									</TableColumn>
								</columns>
							</TableView>
							
							<HBox alignment="center" spacing="10">
								<Button text="Add Adjustment" onAction="#addPayslipAdjustment" />
								<Button text="Delete Adjustment" onAction="#deletePayslipAdjustment" />
							</HBox>
						</VBox>
					</Tab>
					<Tab text="Preview" closable="false">
						<VBox spacing="10" alignment="center">
							<TableView fx:id="previewPayslipTable">
								<columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
								<columns>
									<TableColumn>
										<cellValueFactory>
											<AppPropertyValueFactory property="description" />
										</cellValueFactory>
									</TableColumn>
									<TableColumn styleClass="right">
										<cellValueFactory>
											<AppPropertyValueFactory property="amount" />
										</cellValueFactory>
									</TableColumn>
								</columns>
							</TableView>
						</VBox>
					</Tab>
				</tabs>
			</TabPane>
		</VBox>
	</center>
</BorderPane>
